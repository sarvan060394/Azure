apiVersion: apps/v1
kind: Deployment
metadata:
  name: sidecar
spec:
  replicas: 5
  selector:
    matchLabels:
      app: sidecar
  template:
    metadata:
      labels:
        app: sidecar
    spec:
      containers:
      - name: sidecar-container
        image: your-sidecar-image
        volumeMounts:
        - mountPath: /path/to/sidecar/volume
          name: sidecar-volume
        livenessProbe:
          exec:
            command:
            - /bin/sh
            - -c
            - >
              if [ -f /path/to/sidecar/volume/liveness-probe-file ]; then
                exit 1;
              else
                exit 0;
              fi
          initialDelaySeconds: 10
          periodSeconds: 5
      volumes:
      - name: sidecar-volume
        emptyDir: {}

