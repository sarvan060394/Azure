          exec:
            command:
            - /bin/sh
            - -c
            - >
              if grep -q "restart" /path/to/sidecar/volume/liveness-probe-file; then
                exit 1;
              else
                exit 0;
              fi
          initialDelaySeconds: 10
          periodSeconds: 5
      volumes:
      - name: sidecar-volume
        emptyDir: {}

